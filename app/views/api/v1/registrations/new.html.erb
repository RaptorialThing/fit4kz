
<%= form_for(@user, url: user_registration_path, html: { class: "form-signin" }) do |f| %>
  <div>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, class: "email", autofocus: true, autocomplete: "email" %>
  </div>

  <br/>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, class: "username", autocomplete: "username" %>
  </div>

  <br/>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "first_name", autocomplete: "first name" %>
  </div>

  <br/>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "last_name", autocomplete: "last name" %>
  </div>

  <div>
  <%= f.label :password ,class: "sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div>
  <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>


  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>
